<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('style.css') }}">
        <link rel="stylesheet" href="{{ asset('../assets/AdminBSBMaterialDesign-master/css/style.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">



        {% endblock %}
    </head>
    <body>
      <div class="example-wrapper">
        <nav id="navbar-example2" class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="{{path('home_page')}}">Accueil</a>
            <a class="nav-link" href="{{path('salles_index')}}">Location de Salle</a>
            <a class="nav-link" href="">Generer une facture</a>
            <!-- <a class="navbar-brand" href="">User</a> -->
            {% if is_granted('ROLE_USER') %}
                <ul class="nav nav-pills">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{{app.user.username}}</a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="{{ path('user_show', {'id': app.user.id}) }}">Mon profile</a>
                            <a class="dropdown-item" href="{{ path('salles_show', {'id' : app.user.id}) }}">Mes salles</a>
                            <a class="dropdown-item" href="{{ path('user_new') }}">Mes locations</a>
                            <a class="dropdown-item" href="{{ path('logout') }}">Logout</a>
                        </div>
                    </li>
                </ul>
            {% else %}
                <ul class="nav nav-pills">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Compte</a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="{{ path('login') }}">Connexion</a>
                            <a class="dropdown-item" href="{{ path('user_new') }}">Inscription</a>
                        </div>
                    </li>
                </ul>
            {% endif %}
        </nav>
      </div>
        {% block body %}

        {% endblock %}

        {% block javascripts %}
          <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
