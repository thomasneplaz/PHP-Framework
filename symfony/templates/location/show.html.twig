{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Liste des réservations effectuées</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Salle</th>
                <th>Adresse</th>
                <th>Prix</th>
                <th>DateDeb</th>
                <th>DateFin</th>
                <th>Actions</th>
            </tr>
            {% for location in locations %}
                <tr>
                    <td>{{ location.salle.nom }}</td>
                    <td>{{ location.salle.adress }}</td>
                    <td>{{ location.salle.prix }}</td>
                    <td>{{ location.dateDeb ? location.dateDeb|date('Y-m-d') : '' }}</td>
                    <td>{{ location.dateFin ? location.dateFin|date('Y-m-d') : '' }}</td>
                    <td><a href="{{ path('location_edit', {'id': location.id}) }}"><button class="btn btn-primary">Modifier</button></a>
                    {{ include('location/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}